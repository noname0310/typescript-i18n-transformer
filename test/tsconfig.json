{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "./src/Types",
            "./node_modules/@types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "jsx": "react-jsx",
        "plugins": [
            { "transform": "typescript-i18n-transformer" }
        ],
        "outDir": "./dist"
    },
    "exclude": [
        "dist"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
